<h1>修改用户资料</h1>
<div>
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.name_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "提交更改"%>
  <% end %>
</div>