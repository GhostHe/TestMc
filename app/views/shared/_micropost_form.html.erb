<div class="micropost_input">
  <%= form_for @micropost do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.hidden_field :user_id,:value=>current_user.id%>

      <li><%= f.label :content,"发表：" %></li>
      <li><%= f.text_area :content ,:class=>"input"%></li>

    <p><%= f.submit "提交", :class=>"micropost_button" %>
  <% end %>
</div>